<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="end|center_vertical">
        <ImageButton
            android:id="@+id/btn_close_dialog_add_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_36dp"
            android:layout_marginEnd="4dp"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_amount_dialog_add_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:hint="@string/monto"/>

        <EditText
            android:id="@+id/txt_details_dialog_add_income"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="18sp"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:hint="@string/detalle"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_dialog_add_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/add_income"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

</LinearLayout>