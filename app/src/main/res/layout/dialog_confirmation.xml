<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="end|center_vertical">
        <ImageButton
            android:id="@+id/btn_close_dialog_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_36dp"
            android:layout_marginEnd="4dp"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_prompt_dialog_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp">
        <Button
            android:id="@+id/btn_confirm_dialog_add_expenditure"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circular"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/yes"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_reject_dialog_add_expenditure"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circular"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/no"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="8dp"
            android:textSize="16sp" />
    </LinearLayout>



</LinearLayout>